@model AspNetMVCExample.Models.TorneoModel

@{
    ViewBag.Title = "Home Page";
}

<h1> Form Torneo </h1>
<!-- DEFINISCO FORM CON HTML HELPER-->
@using (Html.BeginForm("MyPage", "Home", FormMethod.Post)) {
    <div class="text-danger">
        @ViewBag.ErrorMessage
        @Html.ValidationSummary()
    </div>
    <div class="text-warning">
        @ViewBag.Message
    </div>
    <div class="row">
        <div class="col-md-6">
            Nome
        </div>
        <div class="col-md-6">
            <!-- DEFINISCO INPUT TEXT CON HELPER E FACCIO BIND CON IL CAMPO Nome DEL MODEL-->
            @Html.TextBox("Nome")
            @Html.ValidationMessage("Nome", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            Descrizione
        </div>
        <div class="col-md-6">
            @Html.TextBox("Descrizione")
            @Html.ValidationMessage("Descrizione", "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            Premio
        </div>
        <div class="col-md-6">
            @Html.TextBox("Premio")
            @Html.ValidationMessage("Premio", "", new { @class = "text-danger" })
        </div>
    </div>
    <div>
        <input type="submit" value="Submit" />
    </div>
}